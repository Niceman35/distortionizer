{
    "$schema": "http://json-schema.org/schema#",
    "definitions": {
        "bounds": {
            "description": "Inclusive bounds specified as [min, max]",
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": [
                {
                    "type": "number",
                    "title": "Min"
                },
                {
                    "type": "number",
                    "title": "Max"
                }
            ]
        },
        "xyBounds": {
            "description": "Inclusive bounds specified as [min, max] for x and/or y components",
            "type": "object",
            "properties": {
                "x": {
                    "allOf": [
                        { "$ref": "#/definitions/bounds" },
                        { "title": "X bounds" }
                    ]
                },
                "y": {
                    "allOf": [
                        { "$ref": "#/definitions/bounds" },
                        { "title": "Y bounds" }
                    ]
                }
            }
        },
        "eyeInput": {
            "description": "Input for one eye",
            "type": "object",
            "properties": {
                "mapping": {
                    "anyOf": [
                        {
                            "description": "Monochromatic distortion ray traces in a whitespace-separated file.",
                            "type": "string"
                        },
                        {
                            "description": "Per-color distortion ray traces in whitespace-separated data files",
                            "type": "object",
                            "properties": {
                                "red": {
                                    "title": "Whitespace-separated data file for red channel",
                                    "type": "string"
                                },
                                "green": {
                                    "title": "Whitespace-separated data file for green channel",
                                    "type": "string"
                                },
                                "blue": {
                                    "title": "Whitespace-separated data file for blue channel",
                                    "type": "string"
                                }
                            },
                            "required": [ "red", "green", "blue" ]
                        }
                    ]
                },

                "additionalVisibleAngles": {
                    "type": "string",
                    "title": "File of additional visible angles without screen mapping",
                    "description": "Whitespace-separated two-column data file of additional visible angles"
                },
                "screenRotationYDegrees": {
                    "type": "number",
                    "title": "Degrees the screen is rotated about the Y axis",
                    "default": 0
                },
                "anglesAreScreenRelative": {
                    "type": "boolean",
                    "title": "Are angles screen-relative?",
                    "description": "The alternative is forward-gaze-relative. This only impacts processing when screen rotation is non-zero.",
                    "default": true
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "depth": {
            "title": "Simulated screen depth (meters)",
            "type": "number",
            "default": 2
        },
        "inputType": {
            "title": "Input angle type",
            "type": "string",
            "enum": [ "fieldAngles", "latitudeLongitude" ],
            "default": "fieldAngles"
        },
        "screen": {
            "title": "Explicit screen-space edges",
            "description": "If not specified, auto-computed from input data. If you specify one side, must specify them all.",
            "type": "object",
            "properties": {
                "top": { "type": "number" },
                "right": { "type": "number" },
                "left": { "type": "number" },
                "bottom": { "type": "number" }
            },
            "required": [ "bottom", "top", "right", "left" ]
        },
        "trimming": {
            "type": "object",
            "title": "Parameters to trim the set of points.",
            "properties": {
                "outputRange": {
                    "type": "object",
                    "properties": {
                        "u1": {
                            "title": "Skip any points (at the output stage) whose u1 value lies outside this range",
                            "description": "The left eye is flipped to provide the right eye bounds.",
                            "type": "object",
                            "properties": {
                                "left": {
                                    "allOf": [
                                        { "$ref": "#/definitions/bounds" },
                                        { "title": "Bounds for the left eye" }
                                    ]
                                }
                            }
                        }
                    }
                },
                "screenPointRange": {
                    "title": "Trim input points whose screen-space X value is outside this range.",
                    "type": "object",
                    "properties": {
                        "left": {
                            "allOf": [
                                { "title": "Bounds for the left eye" },
                                { "$ref": "#/definitions/xyBounds" }
                            ]
                        }
                    }
                },
                "fieldAngleRange": {
                    "title": "Trim input points whose field-angles (in degrees) lie outside this range.",
                    "type": "object",
                    "properties": {
                        "left": {
                            "allOf": [
                                { "title": "Bounds for the left eye" },
                                { "$ref": "#/definitions/xyBounds" }
                            ]
                        }
                    }
                }
            }
        },
        "verbose": {
            "title": "Verbose output",
            "type": "boolean",
            "default": false
        },
        "input": {
            "type": "object",
            "properties": {
                "left": {
                    "allOf": [
                        { "title": "Left eye data" },
                        { "$ref": "#/definitions/eyeInput" }
                    ]
                },
                "right": {
                    "allOf": [
                        { "title": "Right eye data" },
                        { "$ref": "#/definitions/eyeInput" }
                    ]
                }
            },
            "minItems": 1
        },
        "angleVerification": {
            "type": "object",
            "title": "Angle verification/trimming",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "xx": {
                    "type": "number",
                    "default": 1
                },
                "xy": {
                    "type": "number",
                    "default": 0
                },
                "yx": {
                    "type": "number",
                    "default": 0
                },
                "yy": {
                    "type": "number",
                    "default": 1
                },
                "maxAngleDiffDegrees": {
                    "type": "number",
                    "default": 80
                }

            }
        },
        "angleOffset": {
            "type": "array",
            "title": "Angle offset",
            "description": "An offset to be applied in angle space (in degrees) to data read in. This should place 0, 0 as the 'straight ahead' vector",
            "minItems": 2,
            "maxItems": 2,
            "items": [
                {
                    "title": "Longitude/x angle offset",
                    "type": "number",
                    "default": 0
                },
                {
                    "title": "Latitude/y angle offset",
                    "type": "number",
                    "default": 0
                }
            ]
        },
        "angleTwist": {
            "title": "2D rotation to apply to incoming angles",
            "type": "number",
            "default": 0
        }

    }
}
